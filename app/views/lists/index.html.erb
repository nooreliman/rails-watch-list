<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1489599849927-2ee91cede3ba?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1770&q=80);">
  <div class="container">
    <h1>Create lists and save bookmarks for the movies you love!</h1>
    <p>Classic | Romance | Action | Horror</p>
    <%= link_to "Create a new list", new_list_path, class: "btn btn-flat" %>
  </div>
</div>

  <div class="cards">
    <% @lists.each do |list| %>
      <% if( list.photo.key != nil) %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key, height: 400, crop: :fill %>')">
          <%= link_to list.name, list_path(list), class: "a-list" %>
        </div>
      <% else %>
        <div class="card-category">
          <%= link_to list.name, list_path(list), class: "a-list" %>
        </div>
      <% end %>
    <% end %>
  </div>
